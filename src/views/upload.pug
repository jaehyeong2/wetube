extends base.pug

block content
    if errorMessage 
        span=errorMessage 
    form(method="POST", action="/videos/upload")
        input(placeholder="Title", required, type ="text", name = "Title", maxlength = 100)
        input(placeholder="Description", required, type ="text", name = "description", minlength=20 )
        input(placeholder="Hashtags, separated by comma", required, type ="text", name= "hashtags")
        input(type="submit", value="upload video")